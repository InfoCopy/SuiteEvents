<UserControl x:Class="SuiteEvents.Common.UI.ToolbarsControls.ToolbarSmallSeparator"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="20">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/SuiteEvents.Common.Resources;component/Toolbars/ToolbarsStyles.xaml" />
                <ResourceDictionary Source="pack://application:,,,/SuiteEvents.Common.Resources;component/Theme/Paths.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Path x:Name="IconPath"
          Data="{StaticResource SeparatorIconPath}" 
          Style="{StaticResource SmallSeparatorPathStyle}">
    </Path>
</UserControl>
